<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <!-- Shoe Item -->
        <variable
            name="shoe"
            type="com.www.dswstore.database.Shoe" />

        <variable
            name="MainViewModel"
            type="com.www.dswstore.ui.main.MainViewModel" />

        <variable
            name="shoeItemClickListener"
            type="com.www.dswstore.adapters.ShoeItemClickListener" />
    </data>

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="@{() -> shoeItemClickListener.onClick(shoe)}"
        android:background="@color/photo_item_bg_color"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photo_thumbnail"
            android:layout_width="185dp"
            android:layout_height="170dp"
            app:shoeImageCircular="@{shoe.picture_path}"
            app:civ_border_color="@android:color/transparent"
            app:civ_border_width="2dp" />

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mrl_rippleColor="@color/colorPrimaryDark"
            app:mrl_rippleHover="true"
            android:id="@+id/markShoeAsFavorite"
            app:mrl_rippleOverlay="true">

            <ImageView
                android:id="@+id/icon_shoe_favored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:contentDescription="@string/no_content_description"
                android:padding="8dp"
                android:src="@drawable/ic_action_favored"
                android:textColor="@color/colorPrimaryLight"
                android:textStyle="bold" />

        </com.balysv.materialripple.MaterialRippleLayout>
    </RelativeLayout>
</layout>